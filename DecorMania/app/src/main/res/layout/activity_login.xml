<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@android:color/holo_blue_bright"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <!-- Primer LinearLayout con fondo blanco -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#D3DAD8"
        android:orientation="vertical"
        android:padding="10dp"
        android:gravity="center"> <!-- Asegura que los elementos estén centrados -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="-40dp"
            android:orientation="vertical">
            <!-- Puedes agregar más elementos aquí dentro -->

            <!-- Espaciado superior -->

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="214dp"

                app:srcCompat="@drawable/edt" />

            <EditText
                android:id="@+id/email"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:autofillHints="emailAddress"
                android:drawableTint="#0B0303"
                android:ems="10"
                android:hint="Ingrese su correo"
                android:inputType="text|textEmailAddress"
                android:textSize="25dp" />

            <EditText
                android:id="@+id/password"
                android:layout_width="300dp"
                android:textSize="25dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:ems="10"
                android:hint="Ingrese su contraseña"
                android:inputType="text|textPassword" />

            <Button
                android:id="@+id/iniciar"
                android:layout_width="260dp"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:foregroundGravity="center"
                android:text="Iniciar Sesion"
                android:textSize="20dp" />

            <Button
                android:id="@+id/registrar"
                android:layout_width="260dp"
                android:layout_height="58dp"
                android:layout_marginTop="3dp"
                android:foregroundGravity="center"
                android:text="Registrarme"
                android:textSize="20dp" />

            <ImageButton
                android:id="@+id/google"
                android:layout_width="200dp"
                android:layout_height="64dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/google"
                android:layout_marginTop="20dp"/> <!-- Espaciado entre el botón y la imagen de Google -->

        </LinearLayout>

    </LinearLayout>
</LinearLayout>



