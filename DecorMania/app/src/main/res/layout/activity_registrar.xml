<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:background="@android:color/holo_blue_bright"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".RegistrarActivity">

    <!-- Tercer LinearLayout donde estará el formulario -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"

        android:layout_gravity="center">

        <!-- Título del formulario -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="167dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/edt" />

            <TextView
                android:id="@+id/tituloFormulario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="24dp"
                android:gravity="center"
                android:text="Completa Tus Credenciales"
                android:textColor="#000000"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/nombreLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="20dp"
                android:layout_marginBottom="8dp"
                android:text="Nombre"
                android:textColor="#0C0C0C" />

            <EditText
                android:id="@+id/nombre"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="5dp"
                android:textSize="20dp"
                android:layout_marginBottom="16dp"
                android:hint="Ingrese su nombre"
                android:inputType="textPersonName"

                android:paddingLeft="16dp"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/correoLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="20dp"
                android:layout_marginBottom="8dp"
                android:text="Correo Electrónico"
                android:textColor="#333333" />

            <EditText
                android:id="@+id/correo"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="16dp"
                android:textSize="20dp"
                android:layout_marginTop="5dp"
                android:hint="Ingrese su correo"
                android:inputType="textEmailAddress"

                android:paddingLeft="16dp"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/contraseñaLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="20dp"
                android:layout_marginBottom="8dp"
                android:text="Contraseña"
                android:textColor="#333333" />

            <EditText
                android:id="@+id/contraseña"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="24dp"
                android:textSize="20dp"
                android:layout_marginTop="5dp"
                android:hint="Ingrese su contraseña"
                android:inputType="textPassword"

                android:paddingLeft="16dp"
                android:textColor="#000000" />

            <Button
                android:id="@+id/regresar"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:textSize="20dp"
                android:background="#086E0D"
                android:text="Registrar / Iniciar Sesion"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <!-- Campo de Nombre -->

        <!-- Campo de Correo -->

        <!-- Campo de Contraseña -->

        <!-- Botón de registro -->

    </LinearLayout>
</LinearLayout>
